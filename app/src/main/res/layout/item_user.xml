<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/bg_item_box"
    android:padding="16dp"
    android:elevation="2dp">

    <!-- Ligne principale -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Bloc gauche -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nom -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Holder"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <!-- Équipements -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvApplianceCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginEnd="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/appliance"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/ivAppliance1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_machine_a_laver"
                    android:layout_marginEnd="4dp"/>

                <ImageView
                    android:id="@+id/ivAppliance2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_aspirateur"
                    android:layout_marginEnd="4dp"/>

                <ImageView
                    android:id="@+id/ivAppliance3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_climatiseur"
                    android:layout_marginEnd="4dp"/>

                <ImageView
                    android:id="@+id/ivAppliance4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_fer_a_repasser"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Badge étage -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:background="@drawable/bg_etage"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/floor"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvFloor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="1"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_floor_number"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
